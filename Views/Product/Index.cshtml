@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}
@* @if(TempData["success"] != null)
{
    <h2 class="text-primary">@TempData["success"]</h2>
} *@

<partial name="_NotificationPartialView"></partial>

<form class="d-flex col-3 pt-3" action="/Product/filter">
    <input class="form-control me-3" type="text" placeholder="Search" value="@ViewBag.SearchKey" id="search" name="search"/>
    <button class="btn btn-primary">Search</button>
</form>

<div class="container pt-3">
    <div class="row">
        <div class="col-6">
            <h1 class="text-primary ">Product Details</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="AddProduct" class="btn btn-warning"><i class="fa-solid fa-cart-plus"></i> Add Product</a>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="text-center p">
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Product Description</th>
        <th>Product Price</th>
        <th>Product Quantity</th>
        <th colspan="2" class="text-center">Action</th>
        </thead>
        <tbody>
            @foreach(var productList in Model)
            {
                <tr>
                    <td>@productList.ProductId</td>
                    <td>@productList.ProductName</td>
                    <td>@productList.ProductDescription</td>
                    <td>@productList.Price</td>
                    <td>@productList.Quantity</td>
                    <td>
                        <div class="w-50 btn-group rounded-1">
                            <a asp-controller="Product" asp-action="EditProduct" class="btn btn-primary" asp-route-id="@productList.ProductId"><i class="fa-solid fa-pen-to-square"></i></a>
                        </div>
                    </td>
                    <td>
                        <div class="w-50 btn-group rounded-1">
                            <a asp-controller="Product" asp-action="DeleteProduct" class="btn btn-danger" asp-route-id="@productList.ProductId"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

